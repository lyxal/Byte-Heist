{% macro challenge_box(challenge) %}
    <li>
        <a href="/challenge/{{ challenge.id }}/{{ challenge.name | slugify }}/solve">{{ challenge.name }}</a>
        <div class="challenge-category">
            {% if challenge.category == 'code-golf' %}
                Code Golf
            {% elif challenge.category == 'restricted-source' %}
                Restricted Source
            {% endif %}
        </div>
        <div class="score-icon">
            <svg viewBox="4 4 25.866666 25.866666"
                 width="64"
                 style="overflow: visible">
                <path style="fill:var(--body-text);stroke-width:0.529167;stroke-miterlimit:10;stroke-opacity:1" d="M 15.875 2.1166667 L 15.875 8.542631 A 8.4666662 8.4666662 0 0 0 11.687142 10.311515 L 7.0905233 5.8079142 L 5.6094767 7.3199666 L 10.207646 11.825635 A 8.4666662 8.4666662 0 0 0 8.542631 15.875 L 2.1166667 15.875 L 2.1166667 17.991667 L 8.542631 17.991667 A 8.4666662 8.4666662 0 0 0 10.311515 22.179525 L 5.8079142 26.776143 L 7.3199666 28.25719 L 11.825635 23.659021 A 8.4666662 8.4666662 0 0 0 15.875 25.324036 L 15.875 31.75 L 17.991667 31.75 L 17.991667 25.324036 A 8.4666662 8.4666662 0 0 0 22.179525 23.555151 L 26.776143 28.058752 L 28.25719 26.5467 L 23.659021 22.041032 A 8.4666662 8.4666662 0 0 0 25.324036 17.991667 L 31.75 17.991667 L 31.75 15.875 L 25.33127 15.875 A 8.4666662 8.4666662 0 0 0 23.56652 11.675256 L 28.058752 7.0905233 L 26.5467 5.6094767 L 22.054985 10.193693 A 8.4666662 8.4666662 0 0 0 17.991667 8.5353963 L 17.991667 2.1166667 L 15.875 2.1166667 z " />
                {% if challenge.score %}
                    <rect style="fill:var(--editor-bg);fill-opacity:1;stroke:var(--body-text);stroke-width:0.529167;stroke-miterlimit:10;stroke-opacity:1" width="25.5" height="9.5249987" x="4.2333331" y="12.7" ry="1.9515018" />
                    <text style="text-anchor:middle;" x="16.905117" y="20.79977">
                    <tspan style="fill:var(--body-text);fill-opacity:1;stroke:none;stroke-width:0.529167;font-size:10px;font-family:Monospace;font-weight:bold;font-style:normal;font-stretch:normal;font-variant:normal" x="16.905115" y="20.79977">
                    {{-
                    challenge.score
                    -}}
                    </tspan>
                    </text>
                {% endif %}
            </svg>
        </div>
    </li>
{% endmacro %}
